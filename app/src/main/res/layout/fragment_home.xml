<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ecebeb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:textColor="#0051ff"
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công Ty Xây Dựng Công Nghiệp" />


        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Giới thiêu:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Công ty Cổ phần Xây dựng và Kinh doanh địa ốc Công Nghiệp  thành lập vào ngày 27/09/1987." />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:textStyle="bold"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:text="Vị trí công ty: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<ImageView-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:src="@drawable/map_folded"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

        <fragment
            android:id="@+id/fragMap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/tv_hotline"
            android:textColor="@android:color/holo_red_light"
            android:text="Hotline: 0999888080"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</ScrollView>
